/* pages/index/index.wxss (与上次提供的完整版一致，并添加了回退的样式) */
@import "/app.wxss"; /* 确保导入全局样式变量 */

/* 整体页面容器样式 */
.container {
  padding: 60rpx 40rpx 0; /* 顶部和左右的padding，移除硬编码的 padding-bottom */
  /* 这里的 padding-bottom 将通过 WXML 的 style 动态设置 */
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: linear-gradient(to bottom, var(--bg-color), var(--hover-bg-color)); /* 使用全局颜色变量 */
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
}

/* 头部区域样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}
.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 36rpx;
  box-shadow: 0 8rpx 24rpx var(--shadow-color); /* 使用全局阴影变量 */
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}
.title-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main-title {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--title-color); /* 使用全局标题颜色变量 */
  margin-bottom: 10rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.05);
}
.sub-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
  margin-bottom: 20rpx;
}
.description-text {
  font-size: 28rpx;
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
  text-align: center;
  line-height: 1.4;
  padding: 0 20rpx;
}

/* === 核心可变内容区域：输入框 或 结果链接 === */
.content-area {
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

/* 基础卡片样式，用于输入框和结果链接 */
.content-card-base {
  width: 100%;
  background-color: var(--url-bg-color); /* 使用全局URL背景色变量 */
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx var(--shadow-color); /* 使用全局阴影变量 */
  border: 1rpx solid var(--border-color); /* 使用全局边框颜色变量 */
  box-sizing: border-box;
  animation: fadeIn 0.5s ease-out forwards; /* 整个卡片出现时的动画 */
  position: relative; /* 确保粘贴按钮可以相对定位 */
}

/* 输入框部分的卡片化 */
.input-section-card {
  padding: 30rpx;
  min-height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom: 70rpx; /* 留出粘贴按钮的空间，不让它覆盖文字 */
}
.url-input {
  width: 100%;
  height: auto;
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--text-color); /* 使用全局文本颜色变量 */
  box-sizing: border-box;
  flex-grow: 1;
}
.input-placeholder {
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
}

/* 粘贴链接按钮样式 (完整动画控制) */
.paste-link-button {
  position: absolute;
  right: 25rpx;
  bottom: 25rpx;
  background-color: rgba(0, 0, 0, 0.08);
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  line-height: 1;
  height: auto;
  width: auto !important; 
  min-width: 0 !important;
  border: none;
  box-shadow: none;
  box-sizing: border-box;
  text-align: center; 
  display: flex;
  align-items: center;
  justify-content: center;

  transition: opacity 0.3s ease-out, transform 0.3s ease-out;
  opacity: 0;
  transform: translateY(10rpx); /* 默认起始位置，隐藏状态 */
  pointer-events: none; /* 默认不可点击 */
}

.paste-link-button.paste-link-button--visible {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto; /* 可点击 */
}
.paste-link-button.paste-link-button--hidden {
  opacity: 0;
  transform: translateY(10rpx);
  pointer-events: none; /* 不可点击 */
}

.paste-link-button::before {
    content: "粘贴链接"; 
}

.paste-link-button::after {
  border: none;
}
.paste-link-button:active {
  background-color: rgba(0, 0, 0, 0.15);
  transform: scale(0.96);
}


/* 结果显示区域的卡片化 */
.result-section-card {
  padding: 40rpx;
  min-height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.result-icon {
  font-size: 48rpx;
  margin-right: 15rpx;
  color: var(--copy-btn-bg); /* 使用全局复制按钮背景色变量 */
}
.result-title {
  font-size: 38rpx;
  font-weight: 600;
  color: var(--title-color) !important; /* 强制确保颜色清晰可见，使用深色 */
  opacity: 1 !important;
  display: block !important;
  visibility: visible !important;
  height: auto !important;
  overflow: visible !important;
  z-index: auto !important;
  position: static !important;
}

.podcast-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--title-color) !important; /* 强制确保颜色清晰可见，使用深色 */
  text-align: center;
  word-break: break-all;
  line-height: 1.5;
  margin-bottom: 25rpx;
  padding: 0 10rpx;
  opacity: 1 !important;
  display: block !important;
  visibility: visible !important;
  height: auto !important;
  overflow: visible !important;
  z-index: auto !important;
  position: static !important;
}

.result-url {
  font-size: 30rpx;
  color: var(--copy-btn-hover-bg); /* 使用全局复制按钮Hover背景色变量 */
  word-break: break-all;
  line-height: 1.6;
  text-align: center;
  padding: 15rpx 0;
  width: 100%;
}
.clickable-url:active {
  background-color: var(--hover-bg-color); /* 使用全局Hover背景色变量 */
  border-radius: 8rpx;
}
.copy-hint-text {
  font-size: 26rpx;
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}

/* 底部操作区域 */
.bottom-actions-fixed {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: linear-gradient(to top, var(--bg-color) 70%, rgba(240, 242, 245, 0)); /* 使用全局背景色变量 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 主操作按钮 */
.action-button {
  width: 100%;
  height: 108rpx;
  color: var(--btn-text-color); /* 使用全局按钮文本颜色变量 */
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx var(--shadow-color); /* 使用全局阴影变量 */
  transition: all 0.2s ease-in-out;
  letter-spacing: 1rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.action-button[disabled] {
  background: linear-gradient(to right, var(--btn-disabled-bg), var(--btn-disabled-bg)) !important; /* 使用全局禁用按钮颜色变量 */
  opacity: 0.8;
}
.extract-button {
  background: linear-gradient(to right, var(--download-btn-bg), var(--download-btn-hover-bg)); /* 使用全局下载按钮颜色变量 */
}
.extract-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 10rpx var(--shadow-color); /* 使用全局阴影变量 */
}
.copy-button {
  background: linear-gradient(to right, var(--copy-btn-bg), var(--copy-btn-hover-bg)); /* 使用全局复制按钮颜色变量 */
}
.copy-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 10rpx var(--shadow-color); /* 使用全局阴影变量 */
}

/* 移除之前为 .reset-button-in-error-state 定义的样式 */
/* .reset-button-in-error-state { ... } 将其完全删除 */


/* 次要按钮样式 (原本用于提取新链接) */
.secondary-action-area {
  margin-top: 30rpx;
  width: 100%;
  text-align: center;
}
.secondary-button {
  background-color: transparent;
  color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
  font-size: 30rpx;
  font-weight: 500;
  padding: 10rpx 25rpx;
  border: 1rpx solid var(--border-color); /* 使用全局边框颜色变量 */
  border-radius: 40rpx;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease-in-out;
}
.secondary-button::after {
  border: none;
}
.secondary-button:active {
  background-color: var(--hover-bg-color); /* 使用全局Hover背景色变量 */
  transform: scale(0.98);
}

/* 状态/错误提示信息样式 */
.status-message-box {
  margin-top: 40rpx;
  padding: 20rpx 30rpx;
  background-color: var(--hover-bg-color); /* 错误盒子背景色，可以自定义为更警告的颜色 */
  border: 1rpx solid var(--status-error-color); /* 红色边框 */
  border-radius: 16rpx;
  display: flex;
  flex-direction: column; /* 改为列布局，以便按钮垂直排列 */
  align-items: center; /* 居中对齐 */
  width: 100%;
  box-sizing: border-box;
  animation: fadeIn 0.4s ease-out forwards;
}
.status-message-icon {
  font-size: 36rpx;
  margin-right: 0; /* 图标独立一行，取消右边距 */
  margin-bottom: 10rpx; /* 图标下方留白 */
  color: var(--status-error-color); /* 使用全局错误颜色变量 */
}
.status-message-text {
  font-size: 28rpx;
  color: var(--text-color); /* 默认使用文本颜色 */
  line-height: 1.4;
  text-align: center; /* 文本居中 */
  margin-bottom: 20rpx; /* 文本下方留白 */
}

/* 新增：错误状态下的文本颜色 */
.status-error-text {
    color: var(--status-error-color); /* 使用全局错误颜色变量 */
    font-weight: 500;
}

/* 重试按钮、反馈按钮、重新开始按钮的样式 (现在位于 status-message-box 内部) */
.retry-button,
.feedback-button,
.reset-from-error-button { /* 将 reset-from-error-button 添加进来 */
    width: 80%; /* 按钮宽度 */
    height: 80rpx;
    font-size: 30rpx;
    font-weight: 500;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease-in-out;
    margin-top: 15rpx; /* 按钮之间间距 */
    box-sizing: border-box;
    border: 1rpx solid;
}

.retry-button {
    background-color: var(--copy-btn-bg); /* 使用全局复制按钮背景色变量 */
    color: var(--btn-text-color); /* 使用全局按钮文本颜色变量 */
    border-color: var(--copy-btn-bg); /* 使用全局复制按钮背景色变量 */
}
.retry-button:active {
    background-color: var(--copy-btn-hover-bg); /* 使用全局复制按钮Hover背景色变量 */
    transform: scale(0.98);
}

.feedback-button,
.reset-from-error-button { /* 将 reset-from-error-button 与 feedback-button 样式一致 */
    background-color: transparent;
    color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
    border-color: var(--secondary-text-color); /* 使用全局辅助文本颜色变量 */
}
.feedback-button:active,
.reset-from-error-button:active {
    background-color: var(--hover-bg-color); /* 使用全局Hover背景色变量 */
    transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(15rpx); }
  to { opacity: 1; transform: translateY(0); }
}