/* pages/index/index.wxss */

/* 整体页面容器样式 */
.container {
  padding: 40rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 头部区域样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}
.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.title-text {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
}

/* 输入框区域样式 */
.input-wrapper {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}
.url-input {
  width: 100%;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  min-height: 150rpx;
}
/* !!! 新增：优化输入框 placeholder (提示文字) 的样式 !!! */
.url-input::placeholder {
  color: #c8c9cc; /* 使用更浅的灰色 */
}


/* !!! 修改点：按钮通用样式，使用 Flex 居中 !!! */
.extract-button, .copy-button {
  width: 100%;
  height: 96rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  /* 使用 Flexbox 来完美居中文字 */
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  /* line-height 就不再需要了 */
}

/* 提取按钮样式 */
.extract-button {
  background-color: #07c160; /* 微信绿 */
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}
.extract-button:active {
  background-color: #06ad56;
  transform: scale(0.98);
}

/* 结果展示区域样式 */
.result-area {
  width: 100%;
  margin-top: 60rpx;
  border-top: 1px solid #ebedf0;
  padding-top: 40rpx;
}
.result-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 20rpx;
}
.result-url-wrapper {
  padding: 24rpx;
  background-color: #fff;
  border: 1px solid #e9e9e9;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}
.result-url {
  font-size: 26rpx;
  color: #555;
  word-break: break-all;
  line-height: 1.5;
}
/* 复制按钮样式 (也应用了 Flex 居中) */
.copy-button {
  height: 88rpx;
  background-color: #1989fa; /* Element UI 蓝 */
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.2);
}
.copy-button:active {
  background-color: #1678d9;
  transform: scale(0.98);
}

/* 状态/错误提示信息样式 */
.status-message {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #ee0a24; /* Vant UI 红 */
}