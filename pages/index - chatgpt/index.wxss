/* 通用容器 */
.container {
  padding: 30rpx;
  background-color: #f7f8fa;
}

/* 顶部logo + 标题 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.title-text {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
}
.sub-text {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 输入框 */
.input-wrapper {
  margin-bottom: 30rpx;
}
.url-input {
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮 */
.extract-button {
  background-color: #00c17b;
  color: white;
  font-weight: bold;
  padding: 20rpx 0;
  border-radius: 50rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}

/* ✅ 进度条样式 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.progress-inner {
  height: 100%;
  background-color: #00c17b;
  transition: width 0.3s ease;
}

/* 结果区域 */
.result-area {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.result-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.result-url-wrapper {
  word-break: break-all;
  margin-bottom: 20rpx;
}
.result-url {
  font-size: 26rpx;
  color: #1e90ff;
}

/* 复制按钮 */
.copy-button {
  background-color: #f0f0f0;
  font-size: 26rpx;
  padding: 12rpx 0;
  border-radius: 12rpx;
}

/* 状态信息 */
.status-message {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 20rpx;
  text-align: center;
}
